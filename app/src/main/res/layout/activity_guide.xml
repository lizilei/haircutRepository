<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_guid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/ll_anchor_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_anchor1"
            android:layout_width="6.0dip"
            android:layout_height="6.0dip"
            android:src="@mipmap/bg_shape_guide_solid_circle" />

        <ImageView
            android:id="@+id/iv_anchor2"
            android:layout_width="6.0dip"
            android:layout_height="6.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@mipmap/bg_shape_guide_hollow_circle" />

        <ImageView
            android:id="@+id/iv_anchor3"
            android:layout_width="6.0dip"
            android:layout_height="6.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@mipmap/bg_shape_guide_hollow_circle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_experience"
        android:layout_width="169.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40.0dip"
        android:layout_marginTop="12.0dip"
        android:src="@drawable/bg_click_guide_btn"
        android:visibility="gone" />
</RelativeLayout>
