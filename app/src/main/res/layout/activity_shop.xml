<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_shop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_bg"
    android:fadingEdge="none"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/title_bg"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:orientation="horizontal"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/layout_title_back_dianpu"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_title_back"
                    android:layout_width="9.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="16.5dip"
                    android:background="@drawable/btn_back" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="130dp"
                android:textSize="18sp"
                android:text="店铺详情"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ig_shop_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zaoxingshiliebiao"
                android:fadingEdge="none"
                android:spacing="0.0dip" />

            <LinearLayout
                android:id="@+id/layout_shop_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="23.0dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2.5dip"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/layout_shop_star"
                android:layout_width="25.0dip"
                android:layout_height="14.0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14.0dip"
                android:layout_marginTop="14.0dip"
                android:background="@drawable/bg_recommedn_stylist_title"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10.0dip"
                    android:layout_height="10.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@mipmap/shop_star_icon" />

                <TextView
                    android:id="@+id/tv_shop_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:background="@color/white"
            android:minHeight="45.0dip">

            <ImageView
                android:id="@+id/iv_shop_call"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:src="@drawable/btn_shop_call" />

            <ImageView
                android:id="@+id/iv_shop_info_line"
                android:layout_width="1.0dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_shop_call"
                android:background="@mipmap/dianpuxiangqing_shugang_37"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_shop_info_addr"
                android:layout_width="17.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="7.0dip"
                android:background="@mipmap/dianpuxiangqing_zuobiao" />

            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="9.0dip"
                android:layout_marginRight="14.0dip"
                android:layout_marginTop="11.0dip"
                android:layout_toLeftOf="@id/iv_shop_info_line"
                android:layout_toRightOf="@id/iv_shop_info_addr"
                android:textColor="@color/deep_color"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_shop_branch"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginBottom="15.0dip"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_shop_branch_arrow"
                android:layout_width="6.0dip"
                android:layout_height="10.5dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@mipmap/tongyong_xiayiye" />

            <TextView
                android:id="@+id/tv_shop_branch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.0dip"
                android:layout_toLeftOf="@id/iv_shop_branch_arrow"
                android:textColor="@color/deep_color"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_shop_comment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:background="@color/white"
            android:minHeight="45.0dip"
            android:paddingBottom="14.0dip"
            android:paddingTop="14.0dip">

            <ImageView
                android:id="@+id/iv_shop_comment_arrow"
                android:layout_width="6.0dip"
                android:layout_height="10.5dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="@mipmap/tongyong_xiayiye" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.0dip"
                android:layout_toLeftOf="@id/iv_shop_comment_arrow"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shop_comment_num"
                        android:textColor="@color/deep_color"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/tv_shop_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="33.0dip"
                        android:textColor="@color/pink"
                        android:textSize="12.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shop_satisfaction"
                        android:textColor="@color/deep_color"
                        android:textSize="15.0sp" />

                    <TextView
                        android:id="@+id/tv_shop_satisfaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="33.0dip"
                        android:textColor="@color/pink"
                        android:textSize="12.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_comment_perfect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.0dip"
                        android:textColor="@color/light_gray"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/tv_shop_comment_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="17.0dip"
                        android:textColor="@color/light_gray"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/tv_shop_comment_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_gray"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_shop_stylist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip">

            <ImageView
                android:id="@+id/iv_shop_stylist"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/zaoxingshiliebiao"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="104.0dip"
                android:layout_height="135.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/dianpuliebiao_yinying" />

            <ImageView
                android:layout_width="9.0dip"
                android:layout_height="15.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="16.0dip"
                android:background="@drawable/btn_shop_stylist_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/list_shop_item_type"
                android:layout_width="88.0dip"
                android:layout_height="fill_parent"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0.0dip"
                android:fadingEdge="none"
                android:listSelector="@color/white"
                android:scrollbars="none" />

            <ListView
                android:id="@+id/list_shop_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="1.0dip"
                android:fadingEdge="none"
                android:listSelector="@color/transparent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>