<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_login_new"
    android:orientation="vertical">

    <include
        android:id="@+id/title_i"
        layout="@layout/include_title" />

    <!--手机号登陆-->
    <LinearLayout
        android:id="@+id/lin_loginforphone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/edt_login_activity_user_name"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0.5dp"
                android:background="@drawable/edit_text_shape"
                android:drawableLeft="@mipmap/login_phone"
                android:hint="输入用户名"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/edt_login_activity_user_phone"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0.5dp"
                android:background="@drawable/edit_text_shape"
                android:drawableLeft="@mipmap/login_phone"
                android:hint="输入手机号"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="number"
                android:paddingLeft="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edt_login_activity_user_verification_code"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0.5dp"
                android:background="@drawable/edit_text_shape"
                android:drawableLeft="@mipmap/login_pas"
                android:hint="输入验证码"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="number"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/btn_login_activity_user_verification_code"
                android:layout_width="94dp"
                android:layout_height="34dp"
                android:layout_alignRight="@+id/edt_login_activity_user_verification_code"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/button_style_shape"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="10sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_user_login"
            android:layout_width="match_parent"
            android:layout_height="43.5dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_login_bg_shape"
            android:text="登陆"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_user_login1"
            android:layout_width="match_parent"
            android:layout_height="43.5dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_login_bg_shape"
            android:text="游客登录"
            android:visibility="gone"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
