<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false"
    android:clickable="false"
    android:background="@drawable/bottombar_bg"
    android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="true"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:drawableTop="@drawable/aty_main_baby_selector"
                android:gravity="bottom|center_horizontal"
                android:text="首页"
                android:textColor="@color/color_radiobutton"
                android:textSize="12sp" />
            <!--此处有小红点提示-->
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:contentDescription="@null"
                android:src="@mipmap/icon_red_dot"
                android:visibility="gone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/aty_main_news_selector"
                android:gravity="bottom|center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:text="订单"
                android:textColor="@color/color_radiobutton"
                android:textSize="12sp" />

            <!-- android:layout_gravity="center_vertical" -->
             <ImageView
                android:id="@+id/friend_icon_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription=""
                android:layout_gravity="top|right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/red_dot"
                android:visibility="gone"
                 />

            <ImageView
                android:id="@+id/coach_icon_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription=""
                android:layout_gravity="top|right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/red_dot"
                android:visibility="gone"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableTop="@drawable/aty_main_me_selector"
                android:gravity="bottom|center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:text="我的"
                android:textColor="@color/color_radiobutton"
                android:textSize="12sp" />

        </RelativeLayout>

</RadioGroup>