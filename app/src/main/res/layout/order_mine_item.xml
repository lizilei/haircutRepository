<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/commonly_bg_color" />

    <include layout="@layout/common_div_layout" />

    <LinearLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="展会"
            android:textColor="@color/commonly_text_color3"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="待付款"
            android:textColor="@color/common_order_state_text_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:paddingRight="15dp"
            android:text="2016-03-12 12:32"
            android:textColor="@color/commonly_text_color6"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_cover"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="10dp"
            android:src="@mipmap/icon_default" />
        <LinearLayout
            android:id="@+id/ll_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_cover"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/commonly_text_color6"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_order_num"
                android:textColor="@color/commonly_text_color6"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_id"
            android:layout_toRightOf="@id/order_cover"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingLeft="18dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单名称："
                android:textColor="@color/commonly_text_color6"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_order_title"
                android:textColor="@color/commonly_text_color6"
                android:textSize="12sp" />

        </LinearLayout>



    </RelativeLayout>

    <include layout="@layout/common_div_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="￥590万"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_order_look_bg_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="查看订单"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/common_div_layout" />
</LinearLayout>